mixin articleCard(article)
    a.card(href = `/article/${article.id}`)
        img.card-image(src=article.image_url)
        div.card-body
            div.card-title=article.title
            p.published-on Published
                strong.emphasize #{article.friendlyPublishedDate}
                    by
                strong.emphasize #{article.author.first_name}
            div.card-hook=article.intro